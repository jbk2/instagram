<% if @posts.any? %>
  <ul><% @posts.each do |post| %>

        <% if post.image.present? %>
          <%= image_tag post.image.url(:thumb), class: 'uploaded-pic' %>
        <% end %>
      <%= post.name %>

    <li><%= post.description %></li>
    <li>  <%= link_to "Edit #{post.name}", edit_post_path(post) %>
      <%= link_to "Delete #{post.name}", post_path(post),
        method: :delete, data: {confirm: 'Are you sure?' } %>
    </li>
  <% end %></ul>

<% else %>
  <h1>No posts yet.</h1>
<% end %>
  <%= link_to 'New post', new_post_path %>